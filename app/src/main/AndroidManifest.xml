<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trenton.myfavoritescript" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FavoiteScripture"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayScript"
            android:label="@string/title_activity_display_script"
            android:parentActivityName=".FavoiteScripture" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.trenton.myfavoritescript.FavoiteScripture" />
        </activity>
    </application>

</manifest>
